<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/login_Fragment">

    <fragment
        android:id="@+id/login_Fragment"
        android:name="com.example.final_assignment.view.fragments.Login_Fragment"
        android:label="fragment_login_"
        tools:layout="@layout/fragment_login_" >
        <action
            android:id="@+id/action_login_Fragment_to_dashboard_Fragment"
            app:destination="@id/dashboard_Fragment"
            app:popUpTo="@id/login_Fragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/dashboard_Fragment"
        android:name="com.example.final_assignment.view.fragments.Dashboard_Fragment"
        android:label="fragment_dashboard_"
        tools:layout="@layout/fragment_dashboard_" >
        <action
            android:id="@+id/action_dashboard_Fragment_to_details_Fragment"
            app:destination="@id/details_Fragment" />
    </fragment>
    <fragment
        android:id="@+id/details_Fragment"
        android:name="com.example.final_assignment.view.fragments.Details_Fragment"
        android:label="fragment_details_"
        tools:layout="@layout/fragment_details_">
        <argument
            android:name="book"
            app:argType="com.example.final_assignment.model.data.Book"/>
    </fragment>
</navigation>